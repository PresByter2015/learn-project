.chart-option-setting
  .ant-input::-webkit-input-placeholder
    font-size: 12px
  .self-style
    width: 81%
  .item
    width: 100%
    margin-bottom: 2px
    .header-contain
      width: 100%
      height: 40px
      cursor: pointer
      background-color: $panel-menu-header-bg
      p
        float: left
        height: 100%
        width: 50%
        font-size: 12px
        text-indent: 20px
        line-height: 40px
        -moz-user-select: none
        -webkit-user-select: none
        -ms-user-select: none
        -khtml-user-select: none
        user-select: none
      i
        float: right
        height: 100%
        width: 40px
        font-size: 14px
        color: $panel-menu-icon-color
        text-align: center
        line-height: 40px
    .main-contain-hidden
      display: none
    .main-contain-show
      display: block
      padding: 20px 16px
      .add-series
        position: relative
        height: 32px
        .ant-col-14
          position: absolute
          top: 0
          left: 50%
          margin-left: -31.5%
          button
            width: 100%
            font-size: 12px
