$status-label-success-color = #6c83fd
$status-label-error-color = #eb4557

// 状态标签
status_label(type, color)
  &.{type}
    //color color
    color #fff
  &.{type}:before
    background-color color

.status-label
  position relative
  padding-left 17px

  &:before
    content ''
    width 12px
    height 12px
    border-radius 12px
    position absolute
    top 1px
    left 0

  status_label(success, $status-label-success-color)
  status_label(error, $status-label-error-color)
