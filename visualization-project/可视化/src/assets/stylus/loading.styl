@keyframes spinner-fade {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0.1;
  }
}

@keyframes heartbeat {
  0% {
    background-color: #3BBEFC
    opacity: 1
  }
  100% {
    background-color: #29aae6
    opacity: 0.4
  }
}

.loading
  border-radius: 10px
  text-align: center
  color: #fff

  .spinner
    position: relative
    width: 30px
    height: 30px
    font-size: 20px

  .spinner .spinner-blade
    position: absolute
    left: 44.5%
    top: 37%
    width: 2px
    height: 6px
    background-color: #fff
    border-radius: 0.0555em
    animation: spinner-fade 1s linear infinite

  for i in (1..10)
    .spinner .spinner-blade:nth-child({i}) {
      animation-delay: (1 / 10 * (i - 21))s;
      transform: rotate((360 / 10 * i)deg) translate(0, -150%);
    }

.data-loading
  .spinner .spinner-blade
    display: inline-block
    width: 10px
    height: 10px
    background-color: #3BBEFC
    margin: 0 5px
    border-radius: 45px
    animation: heartbeat 0.8s linear infinite

  .spinner
    margin-top: 30px

  .title
    font-size: 13px

  for i in (1..3)
    .spinner .spinner-blade:nth-child({i})
      animation-delay: (1 / 3 * (i - 8))s
