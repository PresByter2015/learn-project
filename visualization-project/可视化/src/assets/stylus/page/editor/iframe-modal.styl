.webpage-iframe
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  z-index 99
  background $webpage-iframe-bg
  display none
  &.show
    display block
  .iframe-tool
    position absolute
    left 16px
    top 16px
    .btn
      width 50px
      height 32px
      line-height 32px
      text-align center
      border-radius 3px
      cursor pointer
      display table
      background-color $app-header-btn-bg
      border 1px solid $app-header-btn-border-color
      color $app-header-btn-color
      .anticon
        font-size 20px
        vertical-align middle
        line-height 32px
        display initial
  iframe
    width 100%
    height 100%
    border none
