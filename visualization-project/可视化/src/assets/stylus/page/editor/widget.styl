.widget-wrap
  .widget-nav
    overflow-y auto
    overflow-x hidden
    height 100%
    .widget-type
      width 80px
      height 80px
      border-bottom 1px solid $widget-wrap-border-color
      color $widget-wrap-color
      cursor pointer
      position relative
      text-align center
      padding 16px 0
      &:before
        content ''
        width 6px
        height 100%
        background $widget-wrap-leftborder-color
        position absolute
        left 0
        top 0
      i.anticon
        font-size 28px
    .widget-hover
      background $widget-wrap-hover-bg
      color $widget-wrap-hover-color
      &:before
        background $widget-wrap-hover-leftborder-color

.nav-panel
  max-height 480px
  width 240px
  color $widget-wrap-color
  position absolute
  right 80px
  top 0
  background $widget-wrap-hover-bg
  z-index 9
  text-align center
  overflow-y auto
  border-radius 5px 0 5px 5px

  &.widget-row-1
    border-radius 5px 0 0 5px
  .widget-group
    width 100%
    float left
    .widget-padding
      float left
      width 100%
    h1
      font-size 12px
      text-align left
      font-weight normal
      padding-left 8px
      height 32px
      line-height 32px
      background $widget-nav-panel-class-title-bg
      color $widget-nav-panel-class-title-color
  .widget-list
    width 80px
    height 80px
    float left
    position relative
    top 0
    transition all 0.2s linear
    cursor pointer
    &:hover
      color $widget-list-hover-color
    .widget-image
      width 72px
      height 50px
      background $widget-image-bg
      margin 0 auto
      border-radius 2px
      transition all 0.2s linear
      background-clip content-box
      span
        width 100%
        height 100%
        display block
        transform scale(.65)
      //内置模具
      svg
        width 40%
        height 100%
        border-radius 2px
        fill $widget-mold-svg-color
    p
      height 18px
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

