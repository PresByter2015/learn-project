.ant-popover-placement-bottom
  .ant-popover-content
    .ant-popover-arrow
      border-bottom-color: $popover-bg
      &:after
        border-bottom-color: $popover-bg
    .ant-popover-inner
      background-color: $popover-bg
      border-color: $popover-bg
      box-shadow: 0 1px 6px $popover-boxshadow-color
      min-width: 0
      .ant-popover-inner-content
        color: $popover-color
        text-align: center
