/* webkit scrollbar */
::-webkit-scrollbar {
  width: 8px
  height: 8px
  background-color: $scrollbar-webkit-bg
  -webkit-box-shadow: inset 0 0 6px $scrollbar-webkit-shadow
}

/* Track */
::-webkit-scrollbar-track {
  background-color: $scrollbar-webkit-bg
  -webkit-box-shadow: inset 0 0 6px $scrollbar-webkit-shadow
  -webkit-border-radius: 10px
  border-radius: 10px
}

/* Handle */
::-webkit-scrollbar-thumb {
  -webkit-border-radius: 10px
  border-radius: 10px
  background: $scrollbar-webkit-handle-bg
  -webkit-box-shadow: inset 0 0 6px $scrollbar-webkit-shadow
}

/* Corner */
::-webkit-scrollbar-corner {
  -webkit-box-shadow: none
  background: $scrollbar-webkit-bg
}
