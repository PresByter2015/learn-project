.color-picker
  color: #000
  background-color: #fff

  .rc-color-picker-panel-inner
    box-shadow: none
    border-bottom: none
    border: none
    padding: 8px 9px

    .rc-color-picker-panel-wrap-preview
      border 1px solid #CACACA
      border-radius 3px

      .rc-color-picker-panel-preview
        box-shadow none
        width 28px
        height 28px

        span, input
          width 100%

    .rc-color-picker-panel-params
      input
        line-height 22px
        height 22px
        padding 0 1px
        box-sizing border-box

  .panel-toolbar
    padding 0 9px

    .more-color
      width: 75%
      height: 20px
      line-height 20px
      text-align center
      display inline-block

    .reset-color
      display inline-block
      width 25%
      height: 20px
      line-height 20px
      text-align right

  .ant-radio-group
    width: 100%
    padding: 4px 10px 10px

    .ant-radio-button-wrapper
      padding: 0
      margin-left: 7px
      float: left
      width 24px
      height 24px
      border 1px solid #D9D9D9

    .ant-radio-button-wrapper:first-child
      border-radius: 0
      margin-left 0

    .ant-radio-button-wrapper-checked
      box-shadow none
      border-color #D9D9D9

    .opacity-0
      position: relative
      width: 24px
      height: 24px
      cursor: pointer
      border: 1px solid #d9d9d9
      top: 0
      float: right
      display: inline-block

      &:after
        top: -6px
        left: 0
        font-size: 22px

.increase-select
  cursor: pointer
