.coverflow-container
  position: fixed
  height: 100%
  left: 0
  right: 0
  top: 104px
  bottom: 0
  padding-bottom: 104px
  margin: auto
  display: flex
  align-items: center

  .coverflow-main
    margin: 0 auto
    padding: 50px
    width: 100%

    &:hover
      .slick-arrow:before
        display: block

    .slick-list
      padding: 0 0 50px !important
      z-index: 9

      .slick-track
        margin: 100px 0

        .slick-slide
          transition: all .3s ease
          position: relative
          z-index: 8
          opacity: 0.8
          transform: scale(0.8)
          -ms-transform: scale(0.8)
          text-align: center

          h1
            display: none

        .slick-center
          z-index: 9
          opacity: 1
          transform: scale(1.6)
          -ms-transform: scale(1.6)

          h1
            display: block

    .slick-prev, .slick-next
      width: 27%
      height: 100%
      z-index: 11
      top: 42%
      -ms-transform translateY(-50%)

      &:before
        font-family: 'iconfont'
        float: left
        content: '\e602'
        width: 28px
        height: 70px
        line-height: 70px
        font-size: 30px
        text-align: center
        display: none

    .slick-prev
      left: 0

    .slick-next
      right: 0

      &:before
        float: right
        content: '\e60e'

    .slick-dots
      bottom: -40px

      li
        width: 11px
        height: 11px
        margin: 0 4px

        button
          width: 11px
          height: 11px
          padding: 0

          &:before
            opacity: 1 !important
            width: 11px
            height: 11px
            line-height: 14px

.one-layout
  .slick-list
    .slick-slide
      transform: scale(1) !important
      -ms-transform: scale(1) !important

    .slick-center
      transform: scale(1) !important
      -ms-transform: scale(1) !important

  .slick-dots
    bottom: 50px !important

.two-layout
  .slick-list
    .slick-slide
      left: -0.6%

    .slick-center
      transform: scale(1.4) !important
      -ms-transform: scale(1.4) !important
      left: -2.5%

  .slick-prev
    width: 36% !important

  .slick-next
    width: 30px !important
