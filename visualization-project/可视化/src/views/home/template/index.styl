.template
  .ant-modal-content
    position: fixed
    width: 100% !important
    height: 100%
    left: 0
    top: 55px
    bottom: 0
    padding-bottom: 55px !important
    overflow: auto

    .ant-modal-body
      section
        width: 50%
        margin: auto

        .create
          position: absolute
          display: none
          top: 50%
          left: 50%
          margin-left: -38px
          margin-top: -14px
          z-index: 1

          .ant-btn-primary
            padding: 5px 25px
            font-size: 12px

        .toolkit
          position: absolute
          right: 0
          z-index: 1
          display: none

          a
            display: inline-block
            width: 30px
            height: 30px
            line-height: 30px
            text-align: center
            border-radius: 3px
            vertical-align: middle
            margin-left: 2px

            i
              font-size: 18px
              vertical-align: middle

        .hoverStatus
          position: absolute
          width: 100%
          height: 100%

        .item-wrap
          display: table-cell
          vertical-align: middle

        .item-wrap-float
          float: left

        .item-box
          float: left
          margin: 22px 0

          .wrap
            position: relative
            margin: 0 10px
            padding: 0
            transition: all .3s ease

            &:hover
              transform: translate3d(0, -5px, 0)

              .snapshot-wrap
                box-shadow: 0 6px 25px 3px rgba(0, 0, 0, .2)

              .toolkit
                display: block

              .create
                display: block

              .item-title
                opacity: 1

            .snapshot-main
              .snapshot-wrap
                position: relative

                .snapshot
                  width: 100%
                  height: 100%
                  background-position: center
                  background-size: contain
                  background-repeat: no-repeat

            h1.item-title
              margin-top: 20px
              font-size: 16px
              font-weight: normal
              text-align: center
              white-space: nowrap
              word-break: break-all
              text-overflow: ellipsis
              overflow: hidden
              opacity: 0

              .ant-input
                font-size: 16px
                text-align: center
                background-color: transparent
                border: none
                cursor: pointer
                padding-right: 25px

                &:focus
                  outline: none
                  box-shadow: none

                &:first-child
                  border-bottom-right-radius: 7px
                  border-top-right-radius: 7px

              .ant-input-group-addon
                background: none
                border: none
                position: absolute
                right: 13px
                top: 2px
                z-index: 11

                &:first-child
                  border-bottom-right-radius: 7px
                  border-top-right-radius: 7px

                i
                  font-size: 20px
                  cursor: pointer

      /*默认不超出6个窗口布局*/

      .fixed-layout
        position: fixed
        left: 0
        right: 0
        top: 104px
        padding-bottom: 104px
        height: 100%
        display: table //IE9
        display: -ms-flexbox //IE10
        -js-display: flex
        display: flex
        -ms-flex-wrap: wrap //IE10
        flex-wrap: wrap
        -ms-justify-content: flex-start //IE10
        justify-content: flex-start
        -ms-align-items: center //IE10
        align-items: center
        align-content: center

        .item-box
          display: table-cell //IE9
          vertical-align: middle //IE9
          text-align: center //IE9
          flex-grow: 0
          flex-shrink: 0
          flex-basis: 50%

        .item-no-float
          float: none
